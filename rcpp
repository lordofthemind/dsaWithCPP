#!/bin/bash

# Function to display compiler information
show_compiler_info() {
    echo "ğŸ”§ Compiler Information:"
    g++ --version | head -n 1
    echo "ğŸ“‹ C++ Standard: C++20"
    echo "ğŸš© Compiler Flags: -std=c++20 -Wall -Wextra"
    echo
}

# Check if a file is provided
if [ -z "$1" ]; then
    echo "Usage: $0 <cpp_file>"
    exit 1
fi

# Extract the file name without extension
filename=$(basename "$1" .cpp)

# Check if the file exists
if [ ! -f "$1" ]; then
    echo "Error: File '$1' not found!"
    exit 1
fi

# Show compiler information
show_compiler_info

# Compile the program
echo "ğŸ“¦ Compiling $1 with C++20 using RCPP..."
g++ -std=c++20 -Wall -Wextra -o "$filename" "$1"

# Check if compilation was successful
if [ $? -eq 0 ]; then
    echo "âœ… Compilation successful!"
    echo "ğŸš€ Running $filename..."
    echo "-----------------------------"
    ./"$filename"
else
    echo "âŒ Compilation failed!"
    exit 1
fi